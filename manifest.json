{
	"name": "Tab Limiter",
	"description": "Limit the number of open tabs â€“ in total and per window",
	"version": "0.4.0",
	"author": "Ziya Aktas",
	"homepage_url": "https://github.com/matthias-vogt/tab-limiter",
	"manifest_version": 3,
	"icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"action": {
		"default_icon": {
			"48": "icons/48.png",
			"128": "icons/128.png"
